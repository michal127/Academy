<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bulbulatory_recommendations" engine="innodb" comment="Recommendations table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Recommendation ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false"
                comment="Customer entity id"/>
        <column xsi:type="varchar" name="email" nullable="false" length="255" comment="Recommended email"/>
        <column xsi:type="varchar" name="hash" nullable="false" length="255" comment="UUID hash"/>
        <column xsi:type="boolean" name="status" default="0" comment="Status of recommendation"/>
        <column xsi:type="datetime" name="created_at" default="CURRENT_TIMESTAMP" on_update="false" nullable="false"
                comment="Creation date of recommendation"/>
        <column xsi:type="datetime" name="confirmed_at" on_update="false" nullable="true"
                comment="Date of confirmation of recommendation"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="HASH_UNIQ">
            <column name="hash"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FL_CUST_ENTITY_ID" table="bulbulatory_recommendations"
                    column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
    </table>
</schema>
