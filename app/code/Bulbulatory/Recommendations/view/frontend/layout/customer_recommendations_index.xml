<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Recommendations</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Bulbulatory\Recommendations\Block\Index"
                   name="bulbulatory_recommendations_recommendation_index"
                   template="Bulbulatory_Recommendations::index.phtml"/>
            <block class="Bulbulatory\Recommendations\Block\RecommendationList"
                   name="bulbulatory_recommendations_recommendation_list"
                   template="Bulbulatory_Recommendations::recommendation_list.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
